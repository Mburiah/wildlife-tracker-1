{{#partial "title"}}Rangers{{/partial}}

{{#partial "content"}}
    <div class="row">
        <div class="col">
            <h1 class="display-4">Animals</h1>
            {{#if animals}}
            <ol>
                {{#each animals}}
                <li>{{animal_name}}</li>
                {{/each}}
            </ol>
            {{else}}
                <div class="alert alert-danger">
                    No Animals Added
                </div>
                <a href="/animal/new" class="btn btn-success">Add Animal</a>
            {{/if}}
        </div>
    </div>
{{/partial}}

{{> layout.hbs}}