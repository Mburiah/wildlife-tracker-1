{{#partial "content"}}
    <div class="row">
        <div class="col pt-2">
            <h1 class="diplay-4">Add Animal</h1>
            <form action="/animal/add" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="animal_name" placeholder="Animal Name">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="animal_id" placeholder="Animal ID">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="animal_age" placeholder="Animal Age">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-secondary">Submit</button>
                </div>
            </form>
        </div>
    </div>
{{/partial}}

{{> layout.hbs}}